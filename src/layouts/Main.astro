---
import ScrollingBG from '../components/ScrollingBG.svelte';
import MediaQuery from "../components/MediaQuery.svelte";
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" initial-scale=1/>
		<title>{title}</title>
	</head>
	<body>
        <ScrollingBG text={title}/>
		<slot/>
	</body>
</html>

<style lang="scss">
    $color-bg: #F9B710;
    $color-dark: #000;
    $color-light: #fff;

    :root {
        background-color: $color-bg;
    }

    @font-face {
        font-family: 'Akira Expanded';
        src: url('./fonts/AkiraExpanded.woff2') format('woff2'),
            url('./fonts/AkiraExpanded.woff') format('woff');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'Akira Expanded';
        src: url('./fonts/AkiraExpanded-Outline.woff2') format('woff2'),
            url('./fonts/AkiraExpanded-Outline.woff') format('woff');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'Akira Expanded';
        src: url('./fonts/AkiraExpanded-Bold.woff2') format('woff2'),
            url('./fonts/AkiraExpanded-Bold.woff') format('woff');
        font-weight: bold;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: 'Smear Sans';
        src: url('./fonts/SmearSans - regular.otf');
        font-weight: bold;
        font-style: normal;
    }

    @font-face {
        font-family: 'Smear Sans';
        src: url('./fonts/SmearSans-ExtremeWide.otf');
        font-weight: bold;
        font-style: oblique;
    }

    @font-face {
        font-family: 'Smear Sans';
        src: url('./fonts/SmearSans-Wide.otf');
        font-weight: bold;
        font-style: italic;
    }

    html {
        font-family: Smear Sans, sans-serif;
        overflow-Y: hidden;
    }

    :global(h1) {
        font-family: Akira Expanded, sans-serif;
        font-weight: bold;
    }

    body {
      overflow: hidden;
      width: 100%;
      height: 100vh;
      display: flex;
      align-items: center;
      line-height: 1.7;
      color: #fff;
      transform: skewY(-5deg);
    }

</style>